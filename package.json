{
  "name": "winslow-bot",
  "version": "2020.12.19-dev",
  "repository": "https://github.com/nieopierzony/winslow-bot.git",
  "author": "Philipp Zelinski <43653566+nieopierzony@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "comment": "Install mongoDb: https://docs.mongodb.com/manual/installation/. Console command: mongo",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "cd backend && npm start",
    "start:dev": "concurrently --kill-others -n 'backend,frontend' -c 'red,blue' \"npm run backend\" \"npm run frontend\"",
    "frontend": "cd frontend && npm run serve",
    "backend": "cd backend && npm start"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "if-env": "^1.0.4"
  }
}
